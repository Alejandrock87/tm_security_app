# Archivo de ejemplo para configuración de variables de entorno
# Para despliegue en Railway

# Configuración de la base de datos
# Railway proporciona esta variable automáticamente al adjuntar PostgreSQL
DATABASE_URL=postgresql://postgres:password@containers-us-west-1.railway.app:5432/railway

# Configuración de seguridad
# IMPORTANTE: Cambiar por un valor aleatorio largo y seguro
FLASK_SECRET_KEY=cambia_esto_por_una_clave_segura_para_produccion

# Configuración de entorno
FLASK_ENV=production
PRODUCTION=True

# Configuración de IA/ML
MODEL_DIR=models

# Configuración del Scheduler
# Frecuencia de reentrenamiento en días (7 = semanal)
RETRAIN_FREQUENCY=7
# Frecuencia de generación de predicciones en días (1 = diario)
PREDICT_FREQUENCY=1
