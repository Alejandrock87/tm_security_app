modules = ["python-3.11"]
[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"
[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Flask App"
[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Retrain Model"
[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Generate Station Icon"

[[workflows.workflow]]
name = "Start Flask App"
author = "agent"
[workflows.workflow.metadata]
agentRequireRestartOnSave = false
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 3000  # Cambiado de 80 a 3000

[[workflows.workflow]]
name = "Retrain Model"
author = "agent"
[workflows.workflow.metadata]
agentRequireRestartOnSave = false
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python retrain_model.py"

[[workflows.workflow]]
name = "Generate Station Icon"
author = "agent"
[workflows.workflow.metadata]
agentRequireRestartOnSave = false
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python generate_station_icon.py"

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80
