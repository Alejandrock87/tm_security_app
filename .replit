modules = ["python-3.11", "postgresql-16"]
[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Generate Station Icon"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Command"

[[workflows.workflow]]
name = "Generate Station Icon"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python generate_station_icon.py"

[[workflows.workflow]]
name = "Model Retrainer"
author = 14140229

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python retrain_scheduler.py"

[[workflows.workflow]]
name = "Run"
author = 14140229

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Build Command"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c 'from app import app; from database import db; with app.app_context(): db.create_all()'"

[deployment]
run = ["sh", "-c", "python -c 'from app import app; from database import db; with app.app_context(): db.create_all()'"]

